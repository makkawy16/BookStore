    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PriceForBorrow)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PriceForBorrow)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PriceForSale)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PriceForSale)
