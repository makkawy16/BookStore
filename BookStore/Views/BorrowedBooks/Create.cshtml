    <dd>
        <img src="/images/@Model.BookImg" height="150" />
        <br />@Model.BookImg
    </dd>

<h4>BorrowedBook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              
                <input type="hidden" name="BookTitile" value="@Model.Title" />

                <div class="form-group">
                    <label class="control-label">User Name</label>
                    <input name="UserName" class="form-control" value="@Context.Session.GetString("Email")" />
                    @* <span asp-validation-for="UserName" class="text-danger"></span> *@
                </div>

                <div class="form-group">
                    <label class="control-label"> UserID</label>
                    <input name="UserId" class="form-control" value="@Convert.ToInt32(Context.Session.GetString("Id"))" />
                    @* <span asp-validation-for="UserId" class="text-danger"></span> *@
                </div>


            <div class="form-group">
                    <label  class="control-label">BorrowDate</label>
                    <input type="datetime-local" name="BorrowDate" class="form-control" />
                @* <span asp-validation-for="BorrowDate" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                    <label  class="control-label">ReturnDate</label>
                    <input name="ReturnDate" type="datetime-local" class="form-control" />
                @* <span asp-validation-for="ReturnDate" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                @* <label asp-for="Price" class="control-label"></label> *@
                <input name="Price" class="form-control" type="hidden" value="@Model.PriceForBorrow" />
                @* <span asp-validation-for="Price" class="text-danger"></span> *@
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
